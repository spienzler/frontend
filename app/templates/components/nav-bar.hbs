<BsNavbar
  @type="dark"
  @backgroundColor="primary"
  @collapsed={{true}}
  @onCollapse={{action (mut collapsed) true}}
  @onExpand={{action (mut collapsed) false}} as |navbar|>
  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" class="navbar-brand"}}{{app-name}}{{/link-to}}
  </div>
  <navbar.content>
    <navbar.nav as |nav|>
      <nav.dropdown as |dd|>
        <dd.toggle>Webcams <span class="caret"></span></dd.toggle>
        <dd.menu as |ddm|>
          {{#each cams as |cam|}}
            <ddm.item>
              <ddm.linkTo @route="index">{{cam.label}}</ddm.linkTo>
            </ddm.item>
          {{/each}}
        </dd.menu>
      </nav.dropdown>
    </navbar.nav>
  </navbar.content>
</BsNavbar>
